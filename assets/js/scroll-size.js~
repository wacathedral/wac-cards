$( document ).ready(function(){
    $(window).load(function() {
        var vWidth = $(window).width();
        var vHeight = $(window).height();
        $('div[id*="card"]').css('width', vWidth).css('height', vHeight);
    });

    $(window).resize(function() {
        var vWidth = $(window).width();
        var vHeight = $(window).height();
        $('div[id*="card"]').css('width', vWidth).css('height', vHeight);
    });
});

